<?xml version="1.0" encoding="utf-8"?>
<!-- It is preffered that you use the SmartBlog Management area to change these settings. -->
<settings>
  <!-- True if you want to send a notification email on comment approve. -->
  <sendApproveEmail>True</sendApproveEmail>
  <!-- Notifies the blog admin that there is a new comment on the website. -->
  <moderatorCommentEmail>luke@101ltd.com</moderatorCommentEmail>
  <!-- Robot email is used when sending an approve email -->
  <robotEmail>no-reply@101ltd.com</robotEmail>
  <!-- Will auto approve comments on all blogs on this website. -->
  <autoApproveComments>False</autoApproveComments>
  <!-- Used when author is left blank. -->
  <defaultAuthor>Luke Alderton</defaultAuthor>
  <!-- Will disable comments for all blogs in this site. -->
  <masterDisableComments>False</masterDisableComments>
  <!-- Comment system is AJAX, and checks for updates client side periodically. -->
  <commentRefreshInterval>20000</commentRefreshInterval>
  <!-- Will use post summary on post list instead of body. (Usefull if posts are long.) -->
  <useSummaryOnList>False</useSummaryOnList>
  <!-- Will disable the Facebook integration on the comment form -->
  <disableFacebookIntegration>False</disableFacebookIntegration>
</settings>